<Page
    x:Class="RivoApplication.UpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RivoApplication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ProgressRing x:ConnectionId='2' Name="UpdateStatus"
                      Margin="0,323,0,0" VerticalAlignment="Top" Height="119" Width="119" CornerRadius="60"
                      IsActive="False"/>
        <Button x:ConnectionId='3' x:Name="Update" Content="Update" Margin="0,213,0,0" VerticalAlignment="Top" 
                FontSize="20" FontWeight="Bold" BorderBrush="{x:Null}"                      HorizontalAlignment="Center" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"/>

    </Grid>
</Page>

